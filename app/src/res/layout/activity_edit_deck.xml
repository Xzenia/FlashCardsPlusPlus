<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.treskie.conrad.flashcardsplus.Edit.EditCard"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/editFlashCard"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:text="@string/deck_name"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/deckNameField"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/deckNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/confirmButton"
        app:layout_constraintTop_toBottomOf="@+id/editFlashCard" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:text="@string/edit_Button"
        android:onClick="saveToDatabase"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deckNameField" />



</android.support.constraint.ConstraintLayout>
